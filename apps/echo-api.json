{
  "openapi": "3.0.0",
  "info": {
    "title": "Echo API",
    "version": "1.0.0",
    "description": "Echo server endpoints"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "components": {
    "parameters": {
      "RequestId": {
        "name": "request-id",
        "in": "header",
        "required": false,
        "schema": {
          "type": "string",
          "format": "uuid"
        },
        "description": "Optional request ID that will be returned in the response"
      }
    },
    "responses": {
      "Success": {
        "description": "Successful response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object"
            }
          }
        }
      },
      "BadRequest": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "ServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Echo APIs",
      "description": "Echo server endpoints"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Echo APIs"],
        "summary": "Echo GET request",
        "description": "Echoes back request information",
        "parameters": [
          {
            "$ref": "#/components/parameters/RequestId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success",
            "content": {
              "application/json": {
                "example": {
                  "method": "GET",
                  "headers": {
                    "host": "localhost:81",
                    "request-id": "123e4567-e89b-12d3-a456-426614174000"
                  },
                  "query": {},
                  "body": null
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "post": {
        "tags": ["Echo APIs"],
        "summary": "Echo POST request",
        "description": "Echoes back POST request data",
        "parameters": [
          {
            "$ref": "#/components/parameters/RequestId"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              },
              "example": {
                "message": "Hello World"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success",
            "content": {
              "application/json": {
                "example": {
                  "method": "POST",
                  "headers": {
                    "content-type": "application/json",
                    "request-id": "123e4567-e89b-12d3-a456-426614174000"
                  },
                  "body": {
                    "message": "Hello World"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "put": {
        "tags": ["Echo APIs"],
        "summary": "Echo PUT request",
        "description": "Echoes back PUT request data",
        "parameters": [
          {
            "$ref": "#/components/parameters/RequestId"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              },
              "example": {
                "id": 1,
                "data": "Updated content"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success",
            "content": {
              "application/json": {
                "example": {
                  "method": "PUT",
                  "headers": {
                    "content-type": "application/json",
                    "request-id": "123e4567-e89b-12d3-a456-426614174000"
                  },
                  "body": {
                    "id": 1,
                    "data": "Updated content"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    }
  },
  "x-tyk-api-gateway": {
    "info": {
      "name": "Echo API",
      "id": "echo-api"
    },
    "upstream": {
      "url": "http://echo"
    },
    "server": {
      "listenPath": {
        "value": "/api/",
        "strip": true
      }
    }
  }
}
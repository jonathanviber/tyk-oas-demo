{
  "openapi": "3.0.0",
  "info": {
    "title": "HTTPBin API",
    "version": "1.0.0",
    "description": "HTTPBin testing endpoints"
  },
  "paths": {
    "/get": {
      "get": {
        "operationId": "httpbinGet",
        "tags": ["HTTPBin APIs"],
        "summary": "HTTPBin GET request",
        "description": "Returns request details including headers and query parameters",
        "parameters": [
          {
            "$ref": "./common-components.json#/components/parameters/RequestId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "./common-components.json#/components/responses/200",
            "content": {
              "application/json": {
                "example": {
                  "args": {},
                  "headers": {
                    "Host": "httpbin.org",
                    "User-Agent": "curl/7.68.0"
                  },
                  "origin": "127.0.0.1",
                  "url": "http://httpbin.org/get"
                }
              }
            }
          },
          "400": {
            "$ref": "./common-components.json#/components/responses/400"
          },
          "500": {
            "$ref": "./common-components.json#/components/responses/500"
          }
        }
      }
    },
    "/uuid": {
      "get": {
        "operationId": "generateUuid",
        "tags": ["HTTPBin APIs"],
        "summary": "Generate UUID",
        "description": "Returns a randomly generated UUID",
        "parameters": [
          {
            "$ref": "./common-components.json#/components/parameters/RequestId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "./common-components.json#/components/responses/200",
            "content": {
              "application/json": {
                "example": {
                  "uuid": "efa634ed-e0c3-4e16-9e5a-159c327ce0d0"
                }
              }
            }
          },
          "500": {
            "$ref": "./common-components.json#/components/responses/500"
          }
        }
      }
    }
  },
  "x-tyk-api-gateway": {
    "info": {
      "name": "HTTPBin API",
      "id": "httpbin-api"
    },
    "upstream": {
      "url": "http://httpbin"
    },
    "server": {
      "listenPath": {
        "value": "/api/",
        "strip": true
      }
    }
  }
}